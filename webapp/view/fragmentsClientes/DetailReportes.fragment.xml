<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"    
    xmlns:r="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout" 
	xmlns:m="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:fb="sap.ui.comp.filterbar"
    xmlns:ux="sap.uxap">

    <l:HorizontalLayout>
		<VBox class="sapUiSmallMargin" width="30rem">
			<f:SimpleForm id="SimpleFormReportes"
				editable="true"
				layout="ResponsiveGridLayout"
				title="Reportes"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="3"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1">
				
				<f:content>
					<fb:FilterBar showGoOnFB="false" showFilterConfiguration="false" id="filterbarReporteClientes" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" >
						<fb:filterGroupItems>
							<fb:FilterGroupItem id="filterReporteId" name="ReporteName" label="Reporte" groupName="Group2" visibleInFilterBar="true">
								<fb:control>
									<m:Input
										id="inputReporte"
										name="Reporte"													
										>												
									</m:Input>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem id="filterCategoriaReporte" name="CategoriaName" label="Categoria" groupName="Group2" visibleInFilterBar="true">
								<fb:control>
									<m:Input
										id="inputCategoriaReporte"
										name="CategoriaReporte"													
										>												
									</m:Input>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem id="groupItemReporte" name="FechaDesde" label="Fecha desde" groupName="Group2" visibleInFilterBar="true">
								<fb:control>
									<m:DatePicker
										id="fechaReportePicker"											
										change="onChangeFechaDesde"
										valueFormat="yyyyMMdd"
										displayFormat="dd/MM/yyyy"
									/>											
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem id="groupItemHastaReporte" name="Fecha" label="Fecha hasta" groupName="Group2" visibleInFilterBar="true">
								<fb:control>
									<m:DatePicker
										id="fechaHastaReportePicker"											
										change="handleChange"
										valueFormat="yyyyMMdd"
										displayFormat="dd/MM/yyyy"/>											
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem id="filterEstadoReporte" name="EstadoName" label="Estado" groupName="Group2" visibleInFilterBar="true">
								<fb:control>
									<m:Input
										id="inputEstadoReporte"
										name="Estado"													
										>												
									</m:Input>
								</fb:control>
							</fb:FilterGroupItem>							
						</fb:filterGroupItems>
					</fb:FilterBar>			

				</f:content>
			</f:SimpleForm>
		</VBox>	
	</l:HorizontalLayout>
</core:FragmentDefinition>